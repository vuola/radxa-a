[Unit]
Description=Upload weather DB to radxa and prune to last 24h
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=moxa-backup
Group=moxa-backup
SupplementaryGroups=www-data
UMask=0027
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/moxa
ExecStart=/usr/local/bin/moxa-upload-archive.sh
